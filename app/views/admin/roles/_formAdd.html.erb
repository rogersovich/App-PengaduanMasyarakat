<%= render 'layouts/elements/navbar' %>

<div class="app-main">
  <%= render 'layouts/elements/sidebar' %>
  
  <div class="app-main__outer">
    <div class="app-main__inner">
        <div class="row">
            <div class="col-md-12 col-xl-12">
                <div class="main-card mb-3 card">
                    <div class="card-body">
                        <div class="table-title-wrapper pb-5">
                            <div class="table-title-heading">
                                <h4>Tambah Peran</h4>
                            </div>
                            <div class="table-title-action">
                                <%= link_to 'Kembali', admin_roles_path, class: 'btn btn-pill btn-primary' %>
                            </div>
                        </div>
                        
                        <%= form_tag :action => 'create' do |form|%>
                            <div class="position-relative form-group">
                                <%= label_tag :name %>
                                <%= text_field_tag :name, nil ,class: 'form-control', required: true %>
                            </div>
                            <div class="form-group mt-5 text-right">
                                <%= submit_tag 'Tambah', class: 'btn btn-primary' %>
                            </div>
                        <% end %>   
                    </div> 
                </div>
            </div>
        </div>          
        
    </div>   
  </div>
</div>

