
<div class="app-sidebar sidebar-shadow">
    <div class="app-header__logo">
        <div class="logo-src"></div>
        <div class="header__pane ml-auto">
            <div>
                <button type="button" class="hamburger close-sidebar-btn hamburger--elastic" data-class="closed-sidebar">
                    <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                    </span>
                </button>
            </div>
        </div>
    </div>
    <div class="app-header__mobile-menu">
        <div>
            <button type="button" class="hamburger hamburger--elastic mobile-toggle-nav">
                <span class="hamburger-box">
                    <span class="hamburger-inner"></span>
                </span>
            </button>
        </div>
    </div>
    <div class="app-header__menu">
        <span>
            <button type="button" class="btn-icon btn-icon-only btn btn-primary btn-sm mobile-toggle-header-nav">
                <span class="btn-icon-wrapper">
                    <i class="fa fa-ellipsis-v fa-w-6"></i>
                </span>
            </button>
        </span>
    </div>    
    <div class="scrollbar-sidebar">
        <div class="app-sidebar__inner pt-5">
            <ul class="vertical-nav-menu">
                <li class="app-sidebar__heading">Dashboards</li>
                <li class="sidebar_main">
                    <%= link_to admin_dashboard_path, id: 'dashboard' do %>
                        <i class="metismenu-icon fa fa-rocket"></i>
                        Dashboard
                    <% end %>
                </li>
                <li class="app-sidebar__heading">Masyarakat</li>
                <li class="sidebar_main">
                    <a href="javascript:;">
                        <i class="metismenu-icon"></i>
                        Pengaduan
                        <i class="metismenu-icon fas fa-gem "></i>
                    </a>
                </li>
                <li class="sidebar_main">
                    <a href="javascript:;">
                        <i class="metismenu-icon"></i>
                        Tanggapan
                        <i class="metismenu-icon fas fa-moon "></i>
                    </a>
                </li>
                <li class="sidebar_main">
                    <%= link_to admin_categories_path, id: 'category' do %>
                        <i class="metismenu-icon"></i>
                        Kategori
                        <i class="metismenu-icon fa fa-home"></i>
                    <% end %>
                   
                </li>
                <li class="app-sidebar__heading">Akun</li>
                  
                <li class="sidebar_main">
                    <%= link_to admin_users_path, id: 'user' do %>
                        <i class="metismenu-icon"></i>
                        Officer
                        <i class="metismenu-icon fa fa-atom"></i>
                    <% end %>
                   
                </li>
                <li class="sidebar_main">
                        
                    <%= link_to admin_societies_path, id: 'society' do %>
                        <i class="metismenu-icon"></i>
                        Masyarakat
                        <i class="metismenu-icon fa fa-book-dead"></i>
                    <% end %>
                </li>
                <li class="sidebar_main">
                        
                    <%= link_to admin_roles_path, id: 'role' do %>
                        <i class="metismenu-icon"></i>
                        Peran
                        <i class="metismenu-icon fa fa-users"></i>
                    <% end %>
                </li>
                <li class="app-sidebar__heading">Laporan</li>
                <li>
                    <%= link_to admin_societies_path, id: 'society' do %>
                        <i class="metismenu-icon"></i>
                        Laporan
                        <i class="metismenu-icon fa fa-sun"></i>
                    <% end %>
                </li>
            </ul>
        </div>
    </div>
</div>

<script>
    $(document).ready(function(){
        
        var fullUrl   = window.location.pathname
        var split = fullUrl.split('/')
        
        if (split[2] == 'users') {
            $('.sidebar_main a').removeClass('mm-active')
            $('#user').addClass('mm-active')
        } else if(split[2] == 'dashboard') {
            $('.sidebar_main a').removeClass('mm-active')
            $('#dashboard').addClass('mm-active')
        } else if(split[2] == 'societies') {
            $('.sidebar_main a').removeClass('mm-active')
            $('#society').addClass('mm-active')
        } else if(split[2] == 'categories') {
            $('.sidebar_main a').removeClass('mm-active')
            $('#category').addClass('mm-active')
        } else if(split[2] == 'roles') {
            $('.sidebar_main a').removeClass('mm-active')
            $('#role').addClass('mm-active')
        }
        
    })
</script>